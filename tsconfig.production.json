{
  "include": [
    "./src"
  ],

  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dest",
    "pretty": true,
    "sourceMap": true,
    "target": "es5"
  }
}
