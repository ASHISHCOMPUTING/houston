{
  "name": "houston",
  "version": "2.0.0",
  "description": "Backend to AppCenter",
  "main": "dist/cli/index.js",
  "repository": "https://github.com/elementary/houston",
  "author": "Blake Kostner <btkostner@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dest/cli/houston.js",
    "build": "gulp --gulpfile 'build/gulpfile.ts' build",
    "build:dev": "gulp --gulpfile 'build/gulpfile.ts' watch",
    "test": "jest",
    "test:dev": "jest --watch",
    "lint": "tslint --type-check --project 'tsconfig.json'",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "knex": "^0.13.0",
    "koa": "^2.2.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.2.0",
    "lasso": "^2.11.11",
    "lasso-marko": "^2.3.0",
    "lodash": "^4.17.4",
    "marko": "^4.4.5",
    "raven": "^2.0.1",
    "uuid": "^3.0.1",
    "yargs": "^8.0.1"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/koa-router": "^7.0.22",
    "@types/node": "^7.0.18",
    "del": "^2.2.2",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-typescript": "^3.1.6",
    "jest": "^20.0.3",
    "sqlite3": "^3.1.8",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.0",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tslint-consistent-codestyle": "^1.2.0",
    "tslint-jsdoc-rules": "^0.1.2",
    "tslint-microsoft-contrib": "^5.0.0",
    "typescript": "^2.3.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/cli/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "testRegex": "\\.(spec|e2e)\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
