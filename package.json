{
  "name": "@elementaryos/houston",
  "version": "0.0.0-development",
  "description": "Backend to AppCenter",
  "main": "dest/app.js",
  "author": "elementary (https://elementary.io)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elementary/houston.git"
  },
  "engines": {
    "node": ">= 8.0.0"
  },
  "bin": {
    "houston": "dest/bin.js"
  },
  "scripts": {
    "start": "node dest/bin.js",
    "build": "gulp --gulpfile 'build/gulpfile.ts' build",
    "build:watch": "gulp --gulpfile 'build/gulpfile.ts' watch",
    "commit": "git-cz",
    "test": "ava",
    "test:spec": "ava test/spec",
    "test:e2e": "ava test/e2e",
    "test:watch": "ava --watch test/spec",
    "coverage": "nyc ava",
    "ci:test": "nyc ava -v",
    "ci:release": "semantic-release",
    "lint": "tslint --project tsconfig.json"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "dockerode": "^3.0.2",
    "ejs": "^2.7.1",
    "eventemitter2": "^5.0.1",
    "faker": "^4.1.0",
    "file-type": "^12.3.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.5",
    "ini": "^1.3.5",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.5",
    "koa": "^2.10.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.15",
    "lru-cache": "^5.1.1",
    "markdown-it": "^10.0.0",
    "nodegit": "^0.26.0",
    "reflect-metadata": "^0.1.13",
    "sanitize-html": "^1.20.1",
    "uuid": "^3.3.3",
    "yargs": "^14.2.0"
  },
  "optionalDependencies": {
    "bull": "^3.4.2",
    "raven": "^2.6.2"
  },
  "devDependencies": {
    "@types/bull": "^3.10.4",
    "@types/faker": "^4.1.6",
    "@types/knex": "^0.16.1",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^12.11.7",
    "ava": "^2.4.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "gulp": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "nock": "^10.0.6",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.27",
    "sinon": "^7.5.0",
    "sqlite3": "^4.1.0",
    "superagent": "^5.1.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-jsdoc-rules": "^0.2.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "dest/"
  ],
  "publichConfig": {
    "access": "public"
  },
  "release": {
    "branch": "v2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "files": [
      "./test/e2e/**/*",
      "./test/spec/**/*"
    ],
    "require": [
      "./test/bootstrap.js",
      "ts-node/register"
    ],
    "snapshotDir": "./test/snapshot"
  },
  "nyc": {
    "all": true,
    "branches": 0,
    "cache": true,
    "check-coverage": true,
    "exclude": [
      "**/node_modules/**",
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.e2e.ts",
      "./src/bootstrap.js",
      "./src/bin.js",
      "./src/app.ts",
      "./src/cli/**/*"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "functions": 0,
    "include": [
      "./src/**/*.js",
      "./src/**/*.ts"
    ],
    "instrument": true,
    "lines": 0,
    "produceSourceMap": true,
    "require": [
      "ts-node/register"
    ],
    "statements": 0,
    "sourceMap": true
  }
}
