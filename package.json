{
  "name": "@elementaryos/houston",
  "version": "2.0.0-alpha.19",
  "description": "Backend to AppCenter",
  "main": "dist/app.js",
  "repository": "https://github.com/elementary/houston",
  "author": "elementary (https://elementary.io)",
  "license": "MIT",
  "engines": {
    "node": "^6.10.0"
  },
  "bin": {
    "houston": "dest/bin.js"
  },
  "scripts": {
    "start": "node dest/bin.js",
    "build": "gulp --gulpfile 'build/gulpfile.ts' build",
    "build:dev": "gulp --gulpfile 'build/gulpfile.ts' watch",
    "test": "jest --no-cache",
    "test:watch": "jest --no-cache --watch --no-coverage",
    "test:unit": "jest --no-cache .spec.ts",
    "test:e2e": "jest --no-cache .e2e.ts",
    "test:dev": "jest --no-cache --watch .spec.ts",
    "coverage": "jest --no-cache --coverage",
    "ci": "jest --ci --no-cache --coverage",
    "lint": "tslint --project 'tsconfig.json'",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.3",
    "@fortawesome/fontawesome-free-brands": "^5.0.6",
    "@fortawesome/fontawesome-free-solid": "^5.0.6",
    "@fortawesome/vue-fontawesome": "0.0.22",
    "@types/bull": "^3.3.3",
    "bull": "^3.3.8",
    "cheerio": "^1.0.0-rc.2",
    "dockerode": "^2.5.3",
    "ejs": "^2.5.7",
    "eventemitter2": "^5.0.1",
    "faker": "^4.1.0",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "ini": "^1.3.5",
    "inversify": "^4.9.0",
    "knex": "^0.14.3",
    "koa": "^2.4.1",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.3.0",
    "koa-static": "^4.0.2",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.0",
    "nodegit": "^0.20.3",
    "reflect-metadata": "^0.1.12",
    "sanitize-html": "^1.17.0",
    "superagent": "^3.8.2",
    "uuid": "^3.2.1",
    "yargs": "^11.0.0"
  },
  "optionalDependencies": {
    "raven": "^2.0.1"
  },
  "devDependencies": {
    "@types/faker": "^4.1.2",
    "@types/jest": "^22.1.2",
    "@types/knex": "0.14.5",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^9.4.5",
    "gulp": "4.0.0",
    "gulp-sourcemaps": "^2.6.3",
    "gulp-typescript": "^4.0.1",
    "jest": "^22.2.2",
    "nock": "^9.1.6",
    "sinon": "^4.3.0",
    "sqlite3": "^3.1.13",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.3",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-consistent-codestyle": "^1.11.0",
    "tslint-jsdoc-rules": "^0.1.2",
    "tslint-microsoft-contrib": "^5.0.2",
    "typescript": "^2.6.2"
  },
  "files": [
    "dest/"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/cli/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/cli/",
      "/.*\\.d\\.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 20,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "<rootDir>/src/bootstrap.js"
    ],
    "testRegex": "\\.(spec|e2e)\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
