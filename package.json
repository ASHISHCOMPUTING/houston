{
  "name": "houston",
  "version": "2.0.0",
  "description": "Backend to AppCenter",
  "main": "dist/app.js",
  "repository": "https://github.com/elementary/houston",
  "author": "Blake Kostner <btkostner@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dest/app.js",
    "build": "gulp --gulpfile 'build/gulpfile.ts' build",
    "build:dev": "gulp --gulpfile 'build/gulpfile.ts' watch",
    "test": "jest --no-cache",
    "test:unit": "jest --no-cache .spec.ts",
    "test:e2e": "jest --no-cache .e2e.ts",
    "test:dev": "jest --no-cache --watch .spec.ts",
    "lint": "tslint --project 'tsconfig.json'",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "dockerode": "^2.5.3",
    "fs-extra": "^3.0.1",
    "inversify": "^4.9.0",
    "knex": "^0.13.0",
    "koa": "^2.4.1",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.3.0",
    "koa-static": "^3.0.0",
    "lasso": "^2.11.23",
    "lasso-marko": "^2.4.0",
    "lodash": "^4.17.4",
    "marko": "^4.7.4",
    "minimist": "^1.2.0",
    "nodegit": "^0.20.3",
    "reflect-metadata": "^0.1.10",
    "uuid": "^3.0.1"
  },
  "optionalDependencies": {
    "raven": "^2.0.1"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/knex": "0.0.68",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^7.0.51",
    "del": "^2.2.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-sourcemaps": "^2.6.2",
    "gulp-typescript": "^3.2.3",
    "jest": "^20.0.3",
    "sinon": "^3.2.1",
    "sqlite3": "^3.1.13",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.14",
    "ts-node": "^3.0.4",
    "tslint": "^5.8.0",
    "tslint-consistent-codestyle": "^1.11.0",
    "tslint-jsdoc-rules": "^0.1.2",
    "tslint-microsoft-contrib": "^5.0.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/cli/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "<rootDir>/src/bootstrap.js"
    ],
    "testRegex": "\\.(spec|e2e)\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
