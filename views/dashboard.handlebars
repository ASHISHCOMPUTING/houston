{{> nav-secondary}}

<div class="row">
    {{#each applications}}
      <div class="repo" href="/project/gh/{{github.fullName}}">
        <!-- {{{json this}}} -->
        {{#if icon.data}}
          <img class="app-icon" src="data:image/svg+xml;base64,{{{icon.data}}}" />
        {{else}}
          <img class="app-icon" src="/images/application-default-icon.png"/>
        {{/if}}
        <div class="description">
          {{#if name}}
            <p>{{name}}</p>
          {{else}}
            <p><em>unknown app</em></p>
          {{/if}}
          <p class="subtext">
            <a href="https://github.com/{{github.fullName}}" target="_blank">{{github.fullName}}</a>
          </p>
        </div>

        {{#if state.standby }}
          {{> popover-needs-release}}
        {{/if}}

        {{#if state.new-release }}
          {{> popover-publish}}
        {{/if}}

        {{#if state.building }}
          {{> popover-in-progress}}
        {{/if}}

        {{#if state.failed }}
          {{> popover-failure}}
        {{/if}}

        {{#if state.reviewing }}
          {{> popover-needs-review}}
        {{/if}}
      </div>
    {{else}}
      <h3>No elementary apps found!</h3>
      An empty <code>.apphub</code> in the root of the repo is how houston
      knows which apps to look at.
    {{/each}}
</div>
