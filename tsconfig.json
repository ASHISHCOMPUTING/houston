{
  "include": [
    "./src/**/*"
  ],

  "exclude": [
    "./src/**/*.e2e.ts",
    "./src/**/*.spec.ts"
  ],

  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dest",
    "pretty": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "target": "es2015"
  }
}
